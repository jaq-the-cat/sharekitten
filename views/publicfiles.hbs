<script src="https://kit.fontawesome.com/42565a906c.js" crossorigin="anonymous"></script>
<a href="/">Return to website</a>
<span>
{{#if hasPrevious }}
  <a href="/uploads?page={{ page-1 }}"><i class="fas fa-caret-left"></i></a>
{{/if}}
Page {{ page }}
<a href="/uploads?page={{ next }}"><i class="fas fa-caret-right"></i></a>
</span>
<table class="files">
  <thead>
    <th class="filename">Filename</th>
    <th class="link">Link</th>
    <th class="uploaded">Uploaded on</th>
  </thead>
  <tbody>
    {{#each files}}
    <tr>
      <td>{{this.filename}}</td>
      <td><a href="/upload/{{this.id}}">/upload/{{this.id}}</a></td>
      <td>{{this.uploaded}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
